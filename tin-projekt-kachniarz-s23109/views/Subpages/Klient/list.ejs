<%- include('../../fragments/header.ejs') %>

    <main>

        <h2><%=__('client.list.title')%></h2>



        <table class="table-list">

            <thead>
                <tr>
                    <th><%=__('client.fields.first-name')%></th>
                    <th><%=__('client.fields.last-name')%></th>
                    <th><%=__('client.fields.email')%></th>
                    <th><%=__('list.actions')%></th>
                </tr>
            </thead>

            <tbody>

            <% for (let kli of klis) {%>
            <tr>
                <td><%= kli.imie%></td>
                <td><%= kli.nazwisko%></td>
                <td><%= kli.email%></td>

                <td>
                    <ul class="list-actions">
                        <li>
                            <a class="list-actions-button-details" href="/Klient/details/<%= kli._id%>">
                                <img src="/Images/icons8-more-details-64.png" class="list-actions-button-details-icon">
                                <span class="list-actions-button-details-text"><%=__('list.details')%></span>
                            </a>
                        </li>
                        <li>
                            <a class="list-actions-button-edit" href="/Klient/edit/<%= kli._id%>">
                                <img src="/Images/icons8-pencil-64.png" class="list-actions-button-edit-icon">
                                <span class="list-actions-button-edit-text"><%=__('list.edit')%></span>
                            </a>
                        </li>
                        <li>
                            <a class="list-actions-button-delete" href="/Klient/delete/<%= kli._id%>" onclick="return confirmDelete(<%="\"" + kli.imie +" "+ kli.nazwisko + "\""%>);">
                                <img src="/Images/icons8-remove-64.png" class="list-actions-button-delete-icon">
                                <span class="list-actions-button-delete-text"><%=__('list.delete')%></span>
                            </a>
                        </li>
                    </ul>
                </td>

            </tr>
            <% }%>

            </tbody>



        </table>

        <p><a href="/klient/add" class="button-add"><%=__('client.list.addNew')%></a> </p>
    </main>

<%- include('../../fragments/footer.ejs') %>